<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop=".1dp"
    android:background="@color/cardview_dark_background"
    >

    <remoteconfigapp.ibtikar.com.remoteconfigapp.PicassoImageView
        android:id="@+id/news_image_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:default_image_url="https://developer.android.com/_static/fac1f4fe01/images/android/touchicon-180.png"
        app:scale_16_9="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/news_image_large"
        android:layout_gravity="bottom"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:text="ddddddddddddddddddddddddddd"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descirption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="ddddddddddddddddddddddddddd"
        android:textColor="#d3d3d3"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descirption"
        android:background="@android:color/transparent"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:src="@drawable/ic_share_black_24dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descirption"
        android:layout_toEndOf="@+id/share"
        android:background="@android:color/transparent"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:src="@drawable/ic_bookmark_black_24dp" />
</RelativeLayout>